<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
                             
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.multipedidos</groupId>
    <artifactId>componente-a</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <!-- 1️⃣ Parent de Spring Boot (gestiona versiones de dependencias) -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.2.2</version> <!-- Cambia si quieres otra versión -->
        <relativePath/> <!-- Busca el parent en el repositorio -->
    </parent>

    <properties>
        <java.version>17</java.version> <!-- Cambia según tu JDK -->
    </properties>

    <!-- 2️⃣ Dependencias del proyecto -->
    <dependencies>

        <!-- Spring Boot Web -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <!-- Spring Data JPA -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>

        <!-- MariaDB -->
        <dependency>
            <groupId>org.mariadb.jdbc</groupId>
            <artifactId>mariadb-java-client</artifactId>
        </dependency>

        <!-- Lombok -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Tu commons-library local -->
        <dependency>
            <groupId>com.multipedidos</groupId> <!-- debe coincidir con tu pom de commons-library -->
            <artifactId>commons-library</artifactId>
            <version>1.0.0</version> <!-- versión que le pusiste al instalarlo -->
        </dependency>

    </dependencies>

    <!-- 3️⃣ Plugins necesarios -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
